generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String? // facultatif avec Google ou Pro Sant√©
  role          Role     @default(patient)
  name          String?
  googleId      String?  @unique
  proSanteId    String?  @unique
  doctolibLogin String?
  doctolibPass  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Auto-relation "proche" <-> "patient"
  linkedPatient   User?  @relation("LinkedProche", fields: [linkedPatientId], references: [id])
  linkedPatientId Int?
  proches         User[] @relation("LinkedProche")
}

enum Role {
  patient
  pro
  proche
}
